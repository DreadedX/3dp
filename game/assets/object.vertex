#version 150 core

in vec3 position;
in vec3 normal;
in vec2 texcoord;

out vec3 FragLocation;
out vec3 Normal;
out vec2 Texcoord;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

void main() {

    gl_Position = projection * view * model * vec4(position, 1.0);
    FragLocation = vec3(model * vec4(position, 1.0));
    Texcoord = texcoord;
    Normal = mat3(transpose(inverse(model))) * normal;
}

